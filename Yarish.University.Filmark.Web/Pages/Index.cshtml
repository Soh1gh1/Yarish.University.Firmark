}

<!DOCTYPE html>
<html>
<head>
    <title>Сторінка з віджетами фільмів</title>
    <style>
        .movie-widget {
            display: inline-block;
            width: 150px;
            text-align: center;
            margin: 10px;
            cursor: pointer;
        }

            .movie-widget img {
                width: 150px;
                height: 225px;
            }

        .movie-title {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    @foreach (var movie in movies)
    {
        <a href="@movie.Value" target="_self">
            <div class="movie-widget">
                <img src="@placeholderImageUrl" alt="Зображення фільму">
                <div class="movie-title">@movie.Key</div>
            </div>
        </a>
    }
</body>
</html>
