@page
@model LoginingModel
@{
    ViewData["Title"] = "Sign In";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .error {
        color: red;
        font-size: 10px;
    }

    .container {
        margin-top: 0px;
    }

    h2 {
        text-align: center;
        margin-bottom: 0px;
    }

    .form-group {
        margin-top: 20px;
    }

    .SubmitButton {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .SubmitButton:hover {
            background-color: #45a049;
        }

    .AlreadySignedUp {
        text-align: center;
        margin-top: 20px;
    }

        .AlreadySignedUp a {
            color: #4CAF50;
            text-decoration: none;
        }

            .AlreadySignedUp a:hover {
                text-decoration: underline;
            }
</style>

<br />
<h2><b>Sign In</b></h2>
<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <input asp-for="User.EmailAddress" type="email" class="form-control" placeholder="example@gmail.com" />
                    <span asp-validation-for="User.EmailAddress" class="error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="User.Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="User.Password" class="error"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="SubmitButton" asp-page-handler="Submit" value="Login" />
                </div>
            </form>

            <div class="AlreadySignedUp">
                <p>Don't have an account? <a href="/Registration">Sign Up</a></p>
            </div>
        </div>
    </div>
</div>
