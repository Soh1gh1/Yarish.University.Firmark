@page
@model Yarish.University.Filmark.Web.Pages.Movies.Movie1Model
@{
    var movie = new
    {
        Title = "Назва фільму",
        Description = "Опис фільму",
        ImageUrl = "https://i.ibb.co/VtQ5gPw/Picsart-23-05-18-10-52-42-318.png"
    };

    var genres = new List<string>
    {
        "Жанр 1",
        "Жанр 2",
        "Жанр 3"
    };

    var actors = new List<string>
    {
        "Актор 1",
        "Актор 2",
        "Актор 3"
    };
}

<!DOCTYPE html>
<html>
<head>
    <title>Інформація про фільм</title>
    <style>
        .movie-container {
            display: flex;
            margin: 20px;
        }

        .movie-image {
            width: 200px;
            height: 300px;
            margin-right: 20px;
        }

        .movie-details {
            flex: 1;
        }

        .movie-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .movie-description {
            margin-bottom: 10px;
        }

        .movie-info {
            margin-bottom: 10px;
        }

            .movie-info strong {
                font-weight: bold;
            }

        .genres,
        .actors {
            display: flex;
            flex-wrap: wrap;
        }

        .genre,
        .actor {
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .comments {
            margin-top: 20px;
            margin-bottom: 50px; /* Збільшена висота місця під коментаріями */
        }

        .comment {
            margin-bottom: 10px;
        }

        .comment-author {
            font-weight: bold;
        }

        .comment-text {
            margin-top: 5px;
        }

        .comment-input {
            margin-top: 20px;
        }

            .comment-input textarea {
                width: 100%;
                height: 80px;
                margin-bottom: 10px;
            }

            .comment-input button {
                padding: 8px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="movie-container">
        <img class="movie-image" src="@movie.ImageUrl" alt="Зображення фільму">
        <div class="movie-details">
            <div class="movie-title">@movie.Title</div>
            <div class="movie-description">@movie.Description</div>
            <div class="movie-info">
                <strong>Жанри:</strong>
                <div class="genres">
                    @foreach (var genre in genres)
                    {
                        <span class="genre">@genre</span>
                    }
                </div>
            </div>
            <div class="movie-info">
                <strong>Актори:</strong>
                <div class="actors">
                    @foreach (var actor in actors)
                    {
                        <span class="actor">@actor</span>
                    }
                </div>
            </div>
            <!-- Додайте додаткову інформацію про фільм тут -->
        </div>
    </div>

    <div class="comments">
        <div class="comment">
            <span class="comment-author">Автор коментаря 1:</span>
            <div class="comment-text">Текст коментаря 1</div>
        </div>
        <div class="comment">
            <span class="comment-author">Автор коментаря 2:</span>
            <div class="comment-text">Текст коментаря 2</div>
        </div>
        <!-- Додайте інші коментарі тут -->
    </div>

    <div class="comment-input">
        <textarea placeholder="Введіть ваш коментар"></textarea>
        <button>Відправити коментар</button>
    </div>
</body>
</html>
