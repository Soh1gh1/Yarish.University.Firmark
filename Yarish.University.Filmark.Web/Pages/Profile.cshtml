@page
@model Pages_Profile
@{

 <!DOCTYPE html>
    <html>
    <head>
        <title>Профіль користувача</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Підключення бібліотеки Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Підключення стилів для профілю користувача -->
        <style>
            .profile-container {
                max-width: 500px;
                margin: 50px auto;
                padding: 20px;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: #f5f5f5;
            }

            .profile-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .profile-avatar {
                text-align: center;
                margin-bottom: 20px;
            }

            .profile-avatar img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
            }

            .profile-field {
                margin-bottom: 10px;
            }

            .profile-field label {
                display: inline-block;
                width: 80px;
                font-weight: bold;
            }

            .profile-field span {
                font-weight: bold;
            }

            .profile-actions {
                text-align: center;
                margin-top: 20px;
            }

            .profile-actions a {
                display: inline-block;
                margin: 10px;
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                text-decoration: none;
                border-radius: 4px;
            }

            .profile-actions a:hover {
                background-color: #45a049;
            }
        </style>
    </head>
    <body>
        <div class="profile-container">
            <h2>Профіль користувача</h2>
            <div class="profile-avatar">
                <img src="https://static.vecteezy.com/system/resources/previews/005/276/776/non_2x/logo-icon-person-on-white-background-free-vector.jpg" alt="Аватар">
            </div>
            <div class="profile-field">
                <label>Ім'я:</label>
            </div>
            <div class="profile-field">
                <label>Email:</label>
            </div>
            <div class="profile-actions">
                <a href="/edit-profile">Редагувати профіль</a>
                <a href="/change-password">Змінити пароль</a>
            </div>
        </div>

        <!-- Підключення скриптів для профілю користувача -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    </body>
    </html>
}
