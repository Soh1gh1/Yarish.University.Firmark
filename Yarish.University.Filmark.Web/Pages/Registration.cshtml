@page
@model RegistrationModel
@{
    ViewData["Title"] = "Sign up";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .error {
        color: red;
        font-size: 10px;
    }

    .container {
        margin-top: 0px;
    }

    h2 {
        text-align: center;
        margin-bottom: 0px;
    }

    .form-group {
        margin-top: 20px;
    }

    .SubmitButton {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .SubmitButton:hover {
            background-color: #45a049;
        }

    .AlreadySignedUp {
        text-align: center;
        margin-top: 20px;
    }

        .AlreadySignedUp a {
            color: #4CAF50;
            text-decoration: none;
        }

            .AlreadySignedUp a:hover {
                text-decoration: underline;
            }
</style>

<br />
<h2><b>Create your profile</b></h2>
<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <input asp-for="User.Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="User.Name" class="error"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@@</div>
                        </div>
                        <input asp-for="User.UserName" class="form-control" placeholder="Username" />
                    </div>
                    <span asp-validation-for="User.UserName" class="error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="User.EmailAddress" type="email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="User.EmailAddress" class="error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="User.Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="User.Password" class="error"></span>
                </div>

                <div class="form-group">
                    <input asp-for="User.ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                    <span asp-validation-for="User.ConfirmPassword" class="error"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Month:</label>
                            <select asp-for="User.SelectedMonth" class="form-control">
                                @foreach (var month in Model.Months)
                                {
                                    <option value="@month">@month</option>
                                }
                            </select>
                            <span asp-validation-for="User.SelectedMonth" class="error"></span>
                        </div>
                        <div class="col-md-4">
                            <label>Day:</label>
                            <select asp-for="User.SelectedDay" class="form-control">
                                @foreach (var day in Model.Days)
                                {
                                    <option value="@day">@day</option>
                                }
                            </select>
                            <span asp-validation-for="User.SelectedDay" class="error"></span>
                        </div>
                        <div class="col-md-4">
                            <label>Year:</label>
                            <select asp-for="User.SelectedYear" class="form-control">
                                @foreach (var year in Model.Years)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="User.SelectedYear" class="error"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="SubmitButton" value="Submit" />
                </div>
            </form>

            <div class="AlreadySignedUp">
                <p>Already have an account? <a href="/Logining">Sign In</a></p>
            </div>
        </div>
    </div>
</div>
